---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import Hero from '../components/Hero.astro';
import ProjectPreview from '../components/ProjectPreview.astro';
import siteConfig from '../data/site-config';
import { sortItemsByDateDesc } from '../utils/data-utils';

const citifiedProjects = (await getCollection('citified')).sort(sortItemsByDateDesc);
const featuredCitifiedProjects = citifiedProjects.filter(({ data }) => data.isFeatured);

const pipelonPosts = (await getCollection('pipelon')).sort(sortItemsByDateDesc);
const featuredPipelonProjects = pipelonPosts.filter(({ data }) => data.isFeatured);
---

<BaseLayout description={siteConfig.description} image={siteConfig.image} showHeader={false}>
    <Hero />
    {
        featuredCitifiedProjects?.length > 0 && (
            <div class="mb-16 sm:mb-24">
                <h2 class="mb-12 text-xl font-serif italic sm:mb-16 sm:text-2xl">Citified</h2>
                {featuredCitifiedProjects.map((project) => (
                    <ProjectPreview project={project} class="mb-10 sm:mb-12" headingLevel="h3" />
                ))}
                <div class="mt-12 sm:mt-16">
                    <Button href="/citified">View All Projects</Button>
                </div>
            </div>
        )
    }
    {
        featuredPipelonProjects?.length > 0 && (
            <div class="mb-16 sm:mb-24">
                <h2 class="mb-12 text-xl font-serif italic sm:mb-16 sm:text-2xl">Pipelon</h2>
                {featuredPipelonProjects.map((project) => (
                    <ProjectPreview project={project} class="mb-10 sm:mb-12" headingLevel="h3" />
                ))}
                <div class="mt-12 sm:mt-16">
                    <Button href="/pipelon">View All projects</Button>
                </div>
            </div>
        )
    }
</BaseLayout>
